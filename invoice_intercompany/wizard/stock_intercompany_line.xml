<odoo>

    <record id="wizard_stock_intercompany_line_form" model="ir.ui.view">
        <field name="name">Ligne de transfert IS</field>
        <field name="model">stock.intercompany.line</field>
        <field name="arch" type="xml">

            <form>
                <group>
                    <field name="product_id" options="{'no_create': True}"/>
                    <field name="quantity"/>
                    <field name="lot_id" options="{'no_create': True}"/>
                </group>
            </form>

        </field>
    </record>

    <record id="wizard_stock_intercompany_line_tree" model="ir.ui.view">
        <field name="name">Ligne de transfert IS</field>
        <field name="model">stock.intercompany.line</field>
        <field name="arch" type="xml">

            <tree>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="lot_id"/>
            </tree>

        </field>
    </record>

</odoo>
